{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-test",
    "rootDir": "./",
    "types": ["jest", "node", "jsdom","@testing-library/jest-dom","@testing-library/react","vite/client"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "__mocks__", "src/shared/types", "tests"],
  "exclude": ["node_modules", "dist", "dist-test"]
}
